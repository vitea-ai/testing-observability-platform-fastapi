# ==========================================
# TIER CONFIGURATION
# ==========================================
# Deployment tier: development | integration | staging | production
APP_DEPLOYMENT_TIER=integration

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME="Testing Observability Platform"
APP_VERSION="0.1.0"
APP_ENV=development
DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=9000

# API Settings
API_V1_PREFIX=/api/v1
APP_ALLOWED_HOSTS=["*"]
APP_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:9000"]

# ==========================================
# FEATURE FLAGS (Progressive Enhancement)
# ==========================================
APP_ENABLE_AUTHENTICATION=false
ENABLE_ENCRYPTION=false
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=false
ENABLE_MONITORING=false
ENABLE_HIPAA_COMPLIANCE=false
ENABLE_WEBSOCKET=false
ENABLE_BACKGROUND_TASKS=false
ENABLE_CACHING=false

# ==========================================
# DATABASE (Tier 2+)
# ==========================================
# DATABASE_URL=sqlite:///./test.db
# For PostgreSQL with psycopg3 (Tier 2+ - Recommended):
DATABASE_URL=postgresql://dbadmin:postgres123@localhost:5433/evaluation_db
# Note: psycopg3 is used by default for better SQLAlchemy async compatibility
#
# For maximum performance with asyncpg (optional):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname
# Warning: asyncpg is harder to use (no named parameters, immutable records)
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# ==========================================
# REDIS (Tier 3+)
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# ==========================================
# AUTHENTICATION (Tier 2+)
# ==========================================
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# SECURITY (Tier 3+)
# ==========================================
# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Security Headers
ENABLE_SECURITY_HEADERS=false
ENABLE_HTTPS_REDIRECT=false

# ==========================================
# MONITORING (Tier 3+)
# ==========================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false
OPENTELEMETRY_ENABLED=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# ENCRYPTION (Tier 4)
# ==========================================
VAULT_URL=https://vault.internal:8200
VAULT_TOKEN=
ENABLE_FIELD_ENCRYPTION=false

# ==========================================
# PLATFORM-SPECIFIC CONFIGURATION
# ==========================================
# Evaluator Service
EVALUATOR_SERVICE_URL=http://evaluator-service:8001
EVALUATOR_TIMEOUT=300

# Experiment Configuration
MAX_CONCURRENT_EVALUATIONS=5
DEFAULT_BATCH_SIZE=10
EXPERIMENT_TIMEOUT=3600

# Healthcare Compliance
ENABLE_HEALTHCARE_MODE=true
PHI_DETECTION_ENABLED=true
AUDIT_RETENTION_DAYS=2555

# ==========================================
# EMAIL (Optional)
# ==========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com

# ==========================================
# EXTERNAL SERVICES
# ==========================================
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# OpenAI (if using AI features)
OPENAI_API_KEY=

# ==========================================
# TESTING
# ==========================================
TESTING=false
TEST_DATABASE_URL=sqlite:///./test.db
